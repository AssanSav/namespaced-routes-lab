<%= form_for @preference, url: admin_preference_path(@preference) do |f| %> 
    <%= f.label :allow_create_artists %>
    <%= f.radio_button :allow_create_artists, true %>
    <%= f.radio_button :allow_create_artists, false %>

    <%= f.label :allow_create_songs %>
    <%= f.radio_button :allow_create_songs, true %>
    <%= f.radio_button :allow_create_songs, false %>

    <%= f.submit %>
<% end %>